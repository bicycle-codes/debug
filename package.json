{
  "type": "module",
  "version": "0.0.0",
  "main": "dist/index.js",
  "scripts": {
    "lint": "standardx -v \"./**/*.ts\"",
    "build-tests": "esbuild test/index.ts --bundle --format=cjs --keep-names > test/test-bundle.js",
    "test": "npm run lint && npm run build && esbuild test/index.ts --bundle --platform=node | node | tap-arc",
    "test-tape-run": "cat test/index.html | tape-run --input=html --static=test | tap-arc",
    "build": "rm -rf ./dist/* && npm run build-node && npm run build-browser",
    "build-browser": "esbuild src/browser.ts --format=esm --keep-names --outdir=./dist",
    "build-node": "esbuild src/node.ts --platform=node --keep-names --outdir=./dist",
    "start": "vite",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags && npm publish",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "ms": "2.1.3",
    "supports-color": "^9.4.0"
  },
  "devDependencies": {
    "@nichoth/tapzero": "^0.8.0",
    "@preact/preset-vite": "^2.5.0",
    "@typescript-eslint/parser": "^5.55.0",
    "esbuild": "^0.15.18",
    "postcss-nesting": "^12.0.1",
    "preact": "^10.17.1",
    "standardx": "^7.0.0",
    "tap-arc": "^0.3.5",
    "tape-run": "^10.0.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.9"
  },
  "exports": {
    "node": "./dist/node.js",
    "default": "./dist/browser.js"
  },
  "author": "nichoth <nichoth@gmail.com> (https://nichoth.com)",
  "license": "AGPL-3.0-or-later"
}
