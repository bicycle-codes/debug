{
  "name": "@nichoth/debug",
  "description": "Debug utility",
  "type": "module",
  "version": "0.2.4",
  "scripts": {
    "lint": "standardx -v \"./**/*.ts\"",
    "build-tests": "esbuild test/index.ts --platform=node --bundle --format=esm --keep-names > test/index.js",
    "test": "npm run lint && npm run build && esbuild test/index.ts --bundle --platform=node --format=esm | node --input-type=module",
    "build": "mkdir -p dist && rm -rf dist/* && tsc --project tsconfig.build.json",
    "start": "vite",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags && npm publish",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "ms": "2.1.3",
    "supports-color": "^9.4.0"
  },
  "devDependencies": {
    "@nichoth/tapzero": "^0.8.0",
    "@types/node": "^20.8.10",
    "@typescript-eslint/parser": "^5.55.0",
    "esbuild": "^0.15.18",
    "postcss-nesting": "^12.0.1",
    "standardx": "^7.0.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.9"
  },
  "exports": {
    "browser": "./dist/browser.js",
    "node": "./dist/node.js",
    "default": "./dist/browser.js"
  },
  "author": "nichoth <nichoth@gmail.com> (https://nichoth.com)",
  "license": "MIT",
  "directories": {
    "example": "example",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichoth/debug.git"
  },
  "keywords": [
    "debug",
    "console",
    "log"
  ],
  "bugs": {
    "url": "https://github.com/nichoth/debug/issues"
  },
  "homepage": "https://github.com/nichoth/debug"
}
